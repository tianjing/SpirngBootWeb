<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.tianjing</groupId>
  <artifactId>test-flink-webapp</artifactId>
  <version>2.6.12.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>com.google.code.findbugs:jsr305</exclude>
                  <exclude>org.slf4j:*</exclude>
                  <exclude>log4j:*</exclude>
                  <exclude>ch.qos.logback:*</exclude>
                  <exclude>org.apache.flink:force-shading</exclude>
                  <exclude>org.apache.flink:flink-streaming-java_2.12</exclude>
                  <exclude>org.apache.flink:flink-clients_2.12</exclude>
                  <exclude>org.apache.flink:flink-core</exclude>
                  <exclude>org.apache.flink:flink-scala_2.12</exclude>
                  <exclude>org.apache.flink:flink-shaded-guava</exclude>
                  <exclude>org.apache.flink:flink-runtime</exclude>
                  <exclude>org.apache.flink:flink-file-sink-common</exclude>
                  <exclude>org.apache.flink:flink-test-utils-junit</exclude>
                  <exclude>org.apache.flink:flink-java</exclude>
                  <exclude>org.apache.commons:*</exclude>
                  <exclude>org.junit.jupiter:*</exclude>
                  <exclude>org.junit.vintage:*</exclude>
                  <exclude>apiguardian-api:*</exclude>
                  <exclude>junit-platform-engine:*</exclude>
                  <exclude>junit:*</exclude>
                  <exclude>org.mockito:*</exclude>
                  <exclude>byte-buddy:*</exclude>
                  <exclude>byte-buddy-agent:*</exclude>
                  <exclude>org.powermock:*</exclude>
                  <exclude>org.hamcrest:*</exclude>
                  <exclude>org.apache.logging.log4j:*</exclude>
                  <exclude>org.scala-lang.modules:*</exclude>
                  <exclude>org.scala-lang:*</exclude>
                  <exclude>commons-lang:*</exclude>
                  <exclude>com.github.luben:*</exclude>
                  <exclude>com.github.javaparser:*</exclude>
                  <exclude>com.fasterxml:*</exclude>
                  <exclude>org.apache.flink:flink-rpc-akka-loader:*</exclude>
                  <exclude>com.esotericsoftware.minlog:*</exclude>
                  <exclude>com.esotericsoftware.kryo:*</exclude>
                  <exclude>commons-cli:commons-cli:*</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>com.github.tianjing.flink.kafka.FlinkKafkaConsumerDemo</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.flink</groupId>
      <artifactId>flink-streaming-java_2.12</artifactId>
      <version>1.14.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.flink</groupId>
      <artifactId>flink-java</artifactId>
      <version>1.14.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.flink</groupId>
      <artifactId>flink-clients_2.12</artifactId>
      <version>1.14.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.flink</groupId>
      <artifactId>flink-core</artifactId>
      <version>1.14.4</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>12</maven.compiler.target>
    <maven.compiler.source>12</maven.compiler.source>
    <flink.version>1.14.4</flink.version>
  </properties>
</project>
